
<li class="group comment " id="<%= comment.escape('id')%>">

  <div class="commentor-avatar">
    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/836/profile/profile-80_3.jpg" alt="">
  </div>


  <div class="comment-content-container">

    <div class="comment-user">
      <% var author = CodePron.users.get(comment.escape('author_id'))%>
      <a href="#/users/<%= author.escape('id')%>">
      <%= author.escape('email')%></a>
    </div>
    <div class="comment-text">
      <%= comment.escape('body')%>
    </div>

 </div>
 </li>
